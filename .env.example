# V-OSS environment template
# Copy this file to .env and fill in real values.

# =============================================================================
# Core
# =============================================================================

# SQLite database
DATABASE_URL="file:./prisma/prisma/dev.db"

# Optional app mode
NEXT_PUBLIC_AUTH_MODE="hybrid"

# Distribution mode
# - oss: open-source distribution
# - private: private/commercial distribution
APP_DISTRIBUTION="oss"
NEXT_PUBLIC_APP_DISTRIBUTION="oss"

# =============================================================================
# Supabase
# =============================================================================

NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# =============================================================================
# Security keys (recommended for production)
# =============================================================================

# 64 hex chars
PERSONAL_INFO_ENCRYPTION_KEY=""

# Fallback seed when PERSONAL_INFO_ENCRYPTION_KEY is not set (development only)
APP_SECURITY_SEED=""

# PEM private key for signing
SIGNING_PRIVATE_KEY=""

# =============================================================================
# Development
# =============================================================================

# For local development only
DEV_BYPASS_AUTH="false"

# =============================================================================
# Electron auto update (optional)
# =============================================================================

ELECTRON_AUTO_UPDATE_ON_STARTUP="true"
ELECTRON_AUTO_UPDATE_CHANNEL=""
ELECTRON_AUTO_UPDATE_ALLOW_PRERELEASE="false"

# =============================================================================
# Cron
# =============================================================================

CRON_SECRET=""

# =============================================================================
# Sync Agent (optional)
# =============================================================================

SYNC_EXTENSION_ENABLED="false"
NEXT_PUBLIC_SYNC_TENANT_ID="default"
SYNC_AGENT_BASE_URL="http://127.0.0.1:8787"
SYNC_AGENT_SHARED_SECRET=""
SYNC_AGENT_HOST="127.0.0.1"
SYNC_AGENT_PORT="8787"
SYNC_AGENT_DATA_ROOT=""
